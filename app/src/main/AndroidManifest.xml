<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />
    </queries>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/itpa"
        android:label="Halcones al Rescate"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Boton_Emergencia">

        <!-- Activities -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmergencyActivity"
            android:exported="true" />
        <activity
            android:name=".ContactListActivity"
            android:exported="false" />
        <activity
            android:name=".ContactoActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Widget Receivers -->
        <receiver
            android:name=".WidgetReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Small Widget Providers -->
        <receiver
            android:name=".EnfermeriaWidget"
            android:exported="true"
            android:label="Enfermería (Pequeño)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/enfermeria_widget_info" />
        </receiver>
        <receiver
            android:name=".TutorWidget"
            android:exported="true"
            android:label="Tutor (Pequeño)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/tutor_widget_info" />
        </receiver>
        <receiver
            android:name=".ContactoWidget"
            android:exported="true"
            android:label="Contacto (Pequeño)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/contacto_widget_info" />
        </receiver>

        <!-- Large Widget Providers -->
        <receiver
            android:name=".EnfermeriaWidgetLarge"
            android:exported="true"
            android:label="Enfermería (Grande)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/enfermeria_widget_info_large" />
        </receiver>
        <receiver
            android:name=".TutorWidgetLarge"
            android:exported="true"
            android:label="Tutor (Grande)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/tutor_widget_info_large" />
        </receiver>
        <receiver
            android:name=".ContactoWidgetLarge"
            android:exported="true"
            android:label="Contacto (Grande)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/contacto_widget_info_large" />
        </receiver>

    </application>

</manifest>